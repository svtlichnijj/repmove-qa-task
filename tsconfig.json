{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~pages/*": ["pages/*"],
      "~utils/*": ["utils/*"],
      "~types/*": ["types/*"]
    }
  },
  "include": ["tests/**/*.ts", "pages/**/*.ts", "utils/*.ts", "types/*.ts", "playwright.config.ts"]
}
